{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/pages/(.*)", "dest": "/pages/$1" },
    { "src": "/(.*\\.(?:css|js|mp3|png|jpg|jpeg|gif|svg|ico|webp))", "dest": "/$1" },
    { "src": "^/api/(.*)", "dest": "/server.js" },
    { "src": "/login", "dest": "/pages/login.html" },
    { "src": "/dashboard", "dest": "/pages/dashboard.html" },
    { "src": "/report", "dest": "/pages/report.html" },
    { "src": "/", "dest": "/pages/index.html" },
    { "src": "/(.*)", "dest": "/pages/index.html" }
  ]
}